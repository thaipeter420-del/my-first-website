rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ฟังก์ชันตรวจสอบสิทธิ์
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isActiveUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.active == true;
    }

    // กฎการเข้าถึงคอลเลคชั่น users
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    // กฎการเข้าถึงคอลเลคชั่น parts
    match /parts/{partId} {
      allow read: if isActiveUser();
      allow write: if isActiveUser();
    }

    // กฎการเข้าถึงคอลเลคชั่น transactions
    match /transactions/{transactionId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // กฎการเข้าถึงคอลเลคชั่น settings
    match /settings/{document=**} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // กฎการเข้าถึงคอลเลคชั่น logs
    match /logs/{logId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser();
      allow update, delete: if isAdmin();
    }

    // กฎการเข้าถึงคอลเลคชั่น backups
    match /backups/{backupId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }
  }
}